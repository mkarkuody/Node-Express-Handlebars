<body>
  <div class="container-fluid">
    <div class="row">
      <section class="masthead" role="img" aria-label=" Gourmet Burger Trio">
        <br/><br/>
        <h1 id="title">Seattle Burgers </h1>
      </section>
    </div>
  </div>
  <div class="container-fluid">
    <div class="row">
      <div class="menu-area col-6 pt-4">
        <ul class="menu-list">
        <h2>Seasonal Burger Menu</h2>
          {{#each burgers}}
          {{#unless devoured}}
          {{> burgers/burgers-block devoured = true}}
          {{/unless}}
          {{/each}}
        </ul>
      </div>
        <div class="Eaten-area col-6 p-4">
          <ul>
          <h3>Devoured Burgers:</h3>
            {{#each burgers}}
            {{#if devoured}}
            {{> burgers/burgers-block devoured = false}}
            {{/if}}
            {{/each}}
           <form class="create-form">
          <h3>Add Your Own Burger to the Menu!</h3>
            <div class="form-group">
              <label for="bur"> Fancy Burger Name:</label>
              <input type="text" id="bur" name="burger_name">
            </div>

            <button class="btn btn-lg btn-warning" type="submit">Add Your Burger</button>
          </form>
           </ul>
        </div>
      </div>
    </div>
  </div>